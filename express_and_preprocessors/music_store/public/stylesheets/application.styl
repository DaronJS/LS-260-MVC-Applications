@import 'whitespace-reset.css'
@import 'mixins'           
body
  font: normal 16px 'Lato', sans-serif
  color: colors.text

form
  dt
    padding: 0 0 5px 0
    font-size: 2em
  dd
    padding: 0 0 20px 0
  input[type="text"],
  input[type="date"],
  input[type="url"]
    width: 100%
    height: 30px
    padding: 5px 8px 
    border: 1px solid colors.border
    border-radius: 6px
    box-sizing: border-box
    

main
  width: 1000px
  padding: 25px 40px
  margin: 0 auto
  background: colors.main

h1
  padding: 0 0 25px 0

  font-size: 2em

#index
  ul
    padding: 0 0 40px 0
    margin: 0 0 0 -20px
    li
      display: inline-block
      width: 20%
      padding: 0 0 25px 20px
      box-sizing: border-box
      vertical-align: top
      img
        display: block
        width: 100%
        margin: 0 0 10px 0
      h2, h3, p
        padding: 0 0 5px 0
      h2
        font-size: 1.2em
      h3
        font-size: 1.1em
a.button, input[type='submit']
  button()
  
header
  display: flex
  flex-direction: row-reverse
  width: 1000px
  padding: 25px 40px
  margin: 0 auto
  background: colors.main
    
#cart
  position: relative
  float: right
  width: 50%
  padding: 15px 0 0 0
  text-align: right
  label
    display: inline-block
    padding: 2px 3px
    cursor: pointer
  input
    display: none
    &:checked
      + #items
        display: block
  #items
    display: none
    position: absolute
    top: 100%
    right: 0
    z-index: 1
    padding: 5px 10px
    color: colors.button.text
    background: colors.button.bg
    li
      padding: 5px 0
      font-size: 12px
      text-align: left
      small
        font-size: 11px
        float: right
        margin: 0 0 0 10px
    a 
      float: left
      position: relative
      top: 2px;
      width: 12px
      height: 12px
      margin: 0 5px 0 0
      text-indent: 8685px
      overflow: hidden
      transform: rotate(45deg)
      &:before,
      &:after
        position: absolute
        content: ''
        background: colors.delete
      &:before
        top: 0
        bottom: 0
        left: 50%
        margin-left: -1px
        width: 2px
      &:after
        top: 50%
        right: 0
        left: 0
        height: 2px
        margin-top: -1px

#login
  width: 50%
  margin: 0 auto   